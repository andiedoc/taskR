<h1>user</h1>
<!--<p><%= link_to 'New User', new_user_path, class: 'btn btn-success btn-sm btn-block' %></p>-->
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
    <tr>
      <!--<th>id</th>-->
      <th class="col-name-user">name</th>
      <th class="col-email-user">email</th>
      <th class="col-tasks-user">tasks</th>
      <!--<th>created at</th>
      <th>updated at</th>-->
      <th class="col-actions-user" colspan="2">actions</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <!--<td><%= user.id %></td>-->
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.count_of_tasks %></td>
          <!--<td><%= user.created_at %></td>
          <td><%= user.updated_at %></td>-->
          <!--<td><%= link_to 'Show', user, class: 'btn btn-primary btn-sm' %></td>-->
          <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary btn-sm' %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
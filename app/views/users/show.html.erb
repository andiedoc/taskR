<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
      </h1>
      <div class="table-responsive">
        <table class="table">
          <tr>
            <td>name</td>
            <th><span class="label label-default"><%= @user.name %></span></th>
          </tr>
          <tr>
            <td>id</td>
            <th><span class="label label-default"><%= @user.id %></span></th>
          </tr>
          <tr>
            <th>email</th>
            <th><span class="label label-default"><%= @user.email%></span></th>
          </tr>
        </table>
      </div>
    </section>
  </aside>
  <section class="user_tasks">
    <h1>tasks</h1>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <tr>
          <th>id</th>
          <th>name</th>
          <th>duration</th>
          <th>created at</th>
          <th>started at</th>
          <th>stopped at</th>
          <th>updated at</th>
          <th>active</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        <% @user.tasks.each do |task| %>
            <tr>
              <td><%= task.id %></td>
              <td><%= task.name %></td>
              <td><%= task.duration %></td>
              <td><%= task.created_at %></td>
              <td><%= task.started_at %></td>
              <td><%= task.stopped_at %></td>
              <td><%= task.updated_at %></td>
              <td><%= task.active %></td>
              <td><%= link_to "Show", task %></td>
              <td><%= link_to "Edit", edit_task_path(task) %></td>
              <td><%= link_to "Remove", task, method: :delete, data: { confirm: "Are you sure?" } %></td>
            </tr>
        <% end %>
      </table>
    </div>
    <br>
    <%= link_to "New task", new_task_path %>
  </section>
</div>
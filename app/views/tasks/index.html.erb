<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Active</th>
      <th>Duration</th>
      <th>Created at</th>
      <th>Started at</th>
      <th>Stopped at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.user %></td>
        <td><%= task.active %></td>
        <td><%= task.duration %></td>
        <td><%= task.created_at %></td>
        <td><%= task.started_at %></td>
        <td><%= task.stopped_at %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

